{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "mails/**/*",
        "outDir": "dist/mails",
        "watchAssets": true
      },
      {
        "include": "public/**/*",
        "outDir": "dist/",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
